pipeline {
    agent any

    environment {
        JAVA_HOME = "/usr/lib/jvm/jre-17-openjdk"
        PATH = "${JAVA_HOME}/bin:${env.PATH}"
        PROJECT_DIR = 'spring-boot-app'
        DOCKERHUB_USERNAME = 'naniy9836'
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/nani-1205/WebApp.git'
            }
        }

        stage('Verify Directory Structure') {
            steps {
                sh 'ls -l spring-boot-app'  // Adjusted path
            }
        }

        stage('Build') {
            steps {
                dir(PROJECT_DIR) {  
                    sh 'mvn clean package -X'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir(PROJECT_DIR) {
                    script {
                        dockerImage = docker.build("$DOCKERHUB_USERNAME/spring-boot-app-alfa:latest")
                    }
                }
            }
        }

        stage('Push Docker Image') {
            environment {
                DOCKER_CREDENTIALS_ID = 'dockerhub-credentials'
            }
            steps {
                dir(PROJECT_DIR) {
                    withDockerRegistry([credentialsId: DOCKER_CREDENTIALS_ID, url: '']) {
                        sh "docker push $DOCKERHUB_USERNAME/spring-boot-app-alfa:latest"
                    }
                }
            }
        }
    }
}
